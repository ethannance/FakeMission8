@{
}
@model AddTask

<div class="container mt-5">
    <div class="row col-12">
        <h1 class="display-4 text-center mb-5">Add a Task</h1>
    </div>
    <form method="post" class="needs-validation" novalidate>
        <input asp-for="TaskId" hidden />

        <div class="row mb-3">
            <div class="col-12">
                <label asp-for="TaskName" class="form-label">Name of Task:</label>
                <input asp-for="TaskName" class="form-control" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label asp-for="DueDate" class="form-label">When is the task due?</label>
                <input asp-for="DueDate" class="form-control" placeholder="MM/DD/YYYY" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label asp-for="Quadrant" class="form-label">How important/urgent is this task?</label>
                <select asp-for="Quadrant" class="form-select">
                    <option value="1">Important & Urgent</option>
                    <option value="2">Important & Not Urgent</option>
                    <option value="3">Not Important & Urgent</option>
                    <option value="4">Not Important & Not Urgent</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label asp-for="CategoryId" class="form-label">What type of task is this?</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">Choose a type</option>
                    @foreach (Categories m in ViewBag.Categories)
                    {
                        <option value="@m.CategoryId">@m.CategoryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label asp-for="Completed" class="form-label">Is the task completed?</label>
                <select asp-for="Completed" class="form-select">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-12" asp-validation-summary="All">

            </div>
        </div>
    </form>
</div>

