@{
}

@model IEnumerable<_8Mission.Models.AddTask>


<div class="container">
    <div class="row col-12"><h1>Steven Covey's Time Management Matrix</h1></div>
    <div class="row col-12">
        <div class="col-4"></div>
        <div class="col-4"><h2>Urgent</h2></div>
        <div class="col-4"><h2>Not Urgent</h2></div>
    </div>
    <div class="row col-12">
        <div class="col-4"><h2>Important</h2></div>
        <div class="col-4 quadrant">
            <h3>Quadrant 1</h3>
            @foreach (var x in Model.Where(x => x.Quadrant == 1))
            {
                <p>- @x.TaskName  </p>
                <p> Due: @x.DueDate </p>
                <p> Category: @x.Category?.CategoryName </p>
                <p>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                </p>
                <br />
            }
        </div>
        <div class="col-4 quadrant">
            <h3>Quadrant 2</h3>
            @foreach (var x in Model.Where(x => x.Quadrant == 2))
            {
                <p>- @x.TaskName  </p>
                <p> Due: @x.DueDate </p>
                <p>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                </p>
                <br />
            }
        </div>
    </div>
    <div class="row col-12">
        <div class="col-4"><h2>Not Important</h2></div>
        <div class="col-4 quadrant">
            <h3>Quadrant 3</h3>
            @foreach (var x in Model.Where(x => x.Quadrant == 3))
            {
                <p>- @x.TaskName  </p>
                <p> Due: @x.DueDate </p>
                <p>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a> 
                </p>
                <br />
            }
        </div>
        <div class="col-4 quadrant">
            <h3>Quadrant 4</h3>
            @foreach (var x in Model.Where(x => x.Quadrant == 4))
            {
                <p>- @x.TaskName  </p>
                <p> Due: @x.DueDate </p>
                <p>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                </p>
                <br />
            }
        </div>
    </div>
</div>

