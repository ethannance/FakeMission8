@{
}

@model IEnumerable<_8Mission.Models.AddTask>



<div class="container mt-5">
    <div class="row col-12 mb-4">
        <h1 class="text-center display-4">Steven Covey's Time Management Matrix</h1>
    </div>
    <div class="row col-12 text-center mb-4">
        <div class="col-4"></div>
        <div class="col-4">
            <h2 class="bg-secondary text-white p-2 rounded">Urgent</h2>
        </div>
        <div class="col-4">
            <h2 class="bg-secondary text-white p-2 rounded">Not Urgent</h2>
        </div>
    </div>
    <div class="row col-12 mb-4">
        <div class="col-4 d-flex align-items-center justify-content-end">
            <h2 class="bg-secondary text-white p-2 rounded">Important</h2>
        </div>
        <div class="col-4 quadrant bg-light border rounded p-3">
            @foreach (var x in Model.Where(x => x.Quadrant == 1))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@x.TaskName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: @x.Category?.CategoryName</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Due: @x.DueDate</h6>
                        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                    </div>
                </div>
            }
        </div>
        <div class="col-4 quadrant bg-light border rounded p-3">
            @foreach (var x in Model.Where(x => x.Quadrant == 2))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@x.TaskName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: @x.Category?.CategoryName</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Due: @x.DueDate</h6>
                        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row col-12 mb-4">
        <div class="col-4 d-flex align-items-center justify-content-end">
            <h2 class="bg-secondary text-white p-2 rounded">Not Important</h2>
        </div>
        <div class="col-4 quadrant bg-light border rounded p-3">
            @foreach (var x in Model.Where(x => x.Quadrant == 3))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@x.TaskName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: @x.Category?.CategoryName</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Due: @x.DueDate</h6>
                        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                    </div>
                </div>
            }
        </div>
        <div class="col-4 quadrant bg-light border rounded p-3">
            @foreach (var x in Model.Where(x => x.Quadrant == 4))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@x.TaskName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: @x.Category?.CategoryName</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Due: @x.DueDate</h6>
                        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

